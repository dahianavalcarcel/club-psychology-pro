{
    "name": "aquea/club-psychology-pro",
    "description": "Sistema profesional de tests psicol√≥gicos para WordPress con arquitectura modular PSR-4",
    "type": "wordpress-plugin",
    "keywords": [
        "wordpress",
        "plugin",
        "psychology",
        "tests",
        "bigfive",
        "monitor-tests",
        "cohesion",
        "psychometric",
        "assessment"
    ],
    "homepage": "https://aquea.org/club-psychology-pro",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Aquea Development",
            "email": "dev@aquea.org",
            "homepage": "https://aquea.org",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "support@aquea.org",
        "issues": "https://github.com/aquea/club-psychology-pro/issues",
        "source": "https://github.com/aquea/club-psychology-pro",
        "docs": "https://aquea.org/docs/club-psychology-pro"
    },
    "require": {
        "php": "^7.4|^8.0|^8.1|^8.2|^8.3",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-curl": "*",
        "psr/container": "^1.1|^2.0",
        "psr/log": "^1.1|^2.0|^3.0",
        "symfony/var-dumper": "^5.4|^6.0|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|^10.0|^11.0",
        "mockery/mockery": "^1.5",
        "brain/monkey": "^2.6",
        "phpstan/phpstan": "^1.8",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "roave/security-advisories": "dev-latest"
    },
    "suggest": {
        "predis/predis": "For Redis cache support",
        "monolog/monolog": "For advanced logging capabilities",
        "league/csv": "For enhanced CSV export functionality",
        "mpdf/mpdf": "For PDF report generation",
        "phpmailer/phpmailer": "For enhanced email functionality"
    },
    "autoload": {
        "psr-4": {
            "ClubPsychologyPro\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "ClubPsychologyPro\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@test:unit",
            "@test:integration"
        ],
        "test:unit": "phpunit --testsuite=unit",
        "test:integration": "phpunit --testsuite=integration",
        "test:coverage": "phpunit --coverage-html coverage/",
        "analyse": "phpstan analyse src/ --level=5",
        "cs:check": "phpcs --standard=WordPress src/",
        "cs:fix": "phpcbf --standard=WordPress src/",
        "build": [
            "@cs:check",
            "@analyse",
            "@test"
        ],
        "install-hooks": [
            "echo 'Installing git hooks...'",
            "cp .githooks/pre-commit .git/hooks/pre-commit",
            "chmod +x .git/hooks/pre-commit"
        ],
        "post-install-cmd": [
            "@install-hooks"
        ],
        "post-update-cmd": [
            "@install-hooks"
        ]
    },
    "scripts-descriptions": {
        "test": "Run all tests (unit and integration)",
        "test:unit": "Run unit tests only",
        "test:integration": "Run integration tests only", 
        "test:coverage": "Generate test coverage report",
        "analyse": "Run static analysis with PHPStan",
        "cs:check": "Check code style compliance",
        "cs:fix": "Fix code style issues automatically",
        "build": "Run full build process (lint, analyse, test)",
        "install-hooks": "Install git hooks for development"
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": false,
        "apcu-autoloader": false,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/installers": true
        }
    },
    "extra": {
        "wordpress-install-dir": "wordpress/",
        "installer-paths": {
            "wordpress/wp-content/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "wordpress/wp-content/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        },
        "branch-alias": {
            "dev-main": "2.0.x-dev",
            "dev-develop": "2.1.x-dev"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org",
            "only": [
                "wpackagist-plugin/*",
                "wpackagist-theme/*"
            ]
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "archive": {
        "exclude": [
            "/.git",
            "/.github",
            "/.gitignore",
            "/.gitattributes",
            "/tests",
            "/phpunit.xml",
            "/phpstan.neon",
            "/phpcs.xml",
            "/.phpcs.xml.dist",
            "/composer.json",
            "/composer.lock",
            "/README.md",
            "/CHANGELOG.md",
            "/docs",
            "/node_modules",
            "/package.json",
            "/package-lock.json",
            "/webpack.config.js",
            "/gulpfile.js",
            "/assets/src",
            "*.log",
            "*.tmp"
        ]
    },
    "funding": [
        {
            "type": "custom",
            "url": "https://aquea.org/donate"
        },
        {
            "type": "patreon",
            "url": "https://patreon.com/aquea"
        }
    ]
}